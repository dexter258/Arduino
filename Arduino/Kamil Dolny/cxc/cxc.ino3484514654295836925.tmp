byte errorSendPrev;
bool debug = true ;
byte error = 0;
byte passedGames = 0;
byte passedGamesPrev = 0;
bool sendInfoToSymbols = false;
bool sendInfoToSimon = false;
bool sendInfoToLabirynth = false;
bool sendInfoToButton = false;
byte debugGames = 7;
bool labirynthPass = false;
bool debugInput = false;
