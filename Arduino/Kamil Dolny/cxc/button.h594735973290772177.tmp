bool checkTime(byte number) {
  byte minute = setMinutes - minutes - 1;
  byte second = 60 - seconds;


  if (number != 8 && (minute == number || second == 10 * number)) {
    return true;
  }

  for (byte i = 0; i < 60; i = i + 10) {
    if (minute == number || second == number + i) {
      return true;
    }
  }

  return false;




}
